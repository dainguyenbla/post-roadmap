<div class="card" id="post_<%= post.id %>">
  <div class="card-block">
    <div class="header-post">
      <%= image_tag 'avatar.jpg' %> 
      <div class="name-at">
        <h5>Tran Anh</h5>
        <p>3 gi·ªù</p>
      </div>
        <div class="dropdown-wrapper">
          <button type="button" class="setting-post-btn" onclick="settingDropdown(<%= post.id %>)"><%= fa_icon "angle-down" %></button>
          <div class="dropdown-content" id="setting-post-dropdown_<%= post.id %>">
          <%= link_to edit_post_path(post), class: "edit-btn", remote: true do %>
            <%= fa_icon "pencil" %> Edit
          <% end %>
          <%= link_to post_path(post), method: "delete", remote: true, class: "del-btn", data: { confirm: "Are you sure?" } do %>
          <%= fa_icon "trash" %> Delete
        <% end %>
        </div>
        </div>
      <div class="clearfix"></div>
    </div>
    <p class="card-text">
        <%= post.message %>
    </p>
    <hr>
    <div class="react-wrap">
      <button><%= fa_icon "thumbs-up" %> Like(99)</button>
      <button onclick="showComments(<%= post.id %>)"><%= fa_icon "comment" %> Comment(12)</button>
    </div>
  </div>
  <div class="comments-wrap" id="comment-wrap_<%= post.id %>">
    <div class="input-comment">
      <%= image_tag "avatar.jpg", class:"small-avatar" %>
      <input type="text" name="comment" id="comment" multiline=true value="">
      <div class="clearfix"></div>

    </div>
    <hr>

    <div class="comment-wrap" id="comment_<%= post.id %>">
      <%= image_tag "avatar.jpg", class:"small-avatar" %>
      <div class="comment">
