<div class="card-wrapper signup">
  <h3>Sign up</h3>
  <%= form_for :user, remote: true, url: auth_signups_path() do |f| %>
    <div class="form_line">
    <%= f.label "Full name" %>
    <%= f.text_field :name %>
    <div class="name-error error">
    </div>
    <%= f.label "Email" %>
    <%= f.text_field :email %>
    <div class="email-error error"></div>
    <%= f.label "Phone" %>
    <%= f.text_field :phone %>
    <div class="phone-number-error error"></div>
    <%= f.label "Password" %>
    <%= f.password_field :password %>
    <div class="password-error error"></div>
    <%= f.label "Confirm password" %>
    <%= f.password_field :password_confirmation %>
    <div class="confirm-password-error error"></div>
    <%= f.submit "Submit"%>
    <div>
  <% end %>
  <%= link_to "Sign in",  new_auth_session_path() %>
</div>
